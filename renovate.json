{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "groupName": "eslint",
      "matchPackagePatterns": [
        "^eslint$",
        "^@eslint/",
        "^@types/eslint"
      ]
    }
  ]
}
