{
  "name": "@poupe/eslint-plugin-tailwindcss",
  "version": "0.2.4",
  "type": "module",
  "description": "ESLint plugin for Tailwind CSS v4 with advanced linting rules",
  "author": "Alejandro Mery <amery@apptly.co>",
  "license": "MIT",
  "homepage": "https://github.com/poupe-ui/eslint-plugin-tailwindcss#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poupe-ui/eslint-plugin-tailwindcss.git"
  },
  "bugs": {
    "url": "https://github.com/poupe-ui/eslint-plugin-tailwindcss/issues"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "tailwind",
    "tailwindcss",
    "tailwind-css",
    "css",
    "linting"
  ],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./configs/*": {
      "import": "./dist/configs/*.mjs",
      "require": "./dist/configs/*.cjs"
    },
    "./parser": {
      "import": "./dist/parser.mjs",
      "require": "./dist/parser.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "clean": "rimraf dist node_modules",
    "dev:prepare": "unbuild --stub",
    "lint": "cross-env DEBUG=eslint:eslint eslint --fix .",
    "postinstall": "[ -s dist/index.mjs ] || unbuild --stub",
    "precommit": "run-s lint type-check test build",
    "prepack": "run-s lint type-check test build publint",
    "publint": "publint",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@eslint/core": "^0.15.1",
    "@eslint/css-tree": "^3.6.1"
  },
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@poupe/eslint-config": "^0.7.9",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.6",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "npm-run-all2": "^8.0.4",
    "pkg-pr-new": "^0.0.54",
    "publint": "^0.3.12",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@eslint/css": "^0.9.0",
    "eslint": "^9.30.0"
  },
  "engines": {
    "node": ">=18.20.8",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "publishConfig": {
    "access": "public"
  }
}
